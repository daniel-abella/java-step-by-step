package caracteres;

import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

public class BufferedReaderExemplo {

	/**
	 * @param args
	 * @throws IOException
	 */
	public static void main(String[] args) throws IOException {

		//DESTINO DOS DADOS
		File file = new File("bufferedwriter.txt");
		file.createNewFile();

		//ESCRITOR DOS DADOS
		FileWriter fileWriter = new FileWriter(file);

		//CAMADA DE ABSTRAÇÃO
		//(ADICIONA FUNCIONALIDADES DE ALTO NÍVEL
		int bufferBytes = 100 * 1024;
		BufferedWriter bufferedWriter =
				new BufferedWriter(fileWriter,bufferBytes);

		bufferedWriter.write("teste3");
		bufferedWriter.write("\n");
		bufferedWriter.write("teste4");

		bufferedWriter.close();
	}

}
