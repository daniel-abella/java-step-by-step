package arquivos;

import java.io.File;
import java.io.IOException;

public class FileExemplo {

	/**
	 * @param args
	 * @throws IOException
	 */
	public static void main(String[] args) throws IOException {

		//CRIAR UM ARQUIVO
		File arquivoCriado = new File("arquivocriado.txt");
		boolean criou = arquivoCriado.createNewFile();
		System.out.println(criou);

		//CRIAR UM DIRETÓRIO
		File diretorioCriado = new File("arquivocriado.txt");
		criou = diretorioCriado.mkdirs();
		System.out.println(criou);

		//TESTAR SE É ARQUIVO OU DIRETÓRIO
		//RENOMEAR
		//DELETAR
		//SABER O TAMANHO
		//SABER O PATH
		//LISTAR OS ARQUIVOS DE UM DIRETÓRIO

	}

}
